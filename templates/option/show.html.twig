{% extends "layout.html.twig" %}

{% block title %}Option
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h2>Option</h2>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ option.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ option.name }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary mb-3" href="{{ path('option_index') }}">back to list</a>

		<a class="btn btn-primary mb-3" href="{{ path('option_edit', {'id': option.id}) }}">edit</a>

		{{ include('option/_delete_form.html.twig') }}
	</div>
{% endblock %}
