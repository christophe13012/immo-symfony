{% extends "layout.html.twig" %}

{% block title %}Option index
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h2>Option index</h2>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for option in options %}
					<tr>
						<td>{{ option.id }}</td>
						<td>{{ option.name }}</td>
						<td>
							<a class="btn btn-success mr-2" href="{{ path('option_show', {'id': option.id}) }}">show</a>
							<a class="btn btn-primary" href="{{ path('option_edit', {'id': option.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-primary" href="{{ path('option_new') }}">Create new</a>
	</div>
{% endblock %}
