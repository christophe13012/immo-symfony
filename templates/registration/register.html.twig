{% extends "layout.html.twig" %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h2>S'inscrire</h2>

		{{ form_start(registrationForm) }}
		{{ form_label(registrationForm.username, 'Identifiant') }}
		{{ form_widget(registrationForm.username, {attr: {class: 'form-control mb-3'} }) }}
		{{ form_label(registrationForm.email, 'Email') }}
		{{ form_widget(registrationForm.email, {attr: {class: 'form-control mb-3'} }) }}
		{{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
		{{ form_widget(registrationForm.plainPassword, {attr: {class: 'form-control mb-3'} }) }}

		<button class="btn btn-primary">Register</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
